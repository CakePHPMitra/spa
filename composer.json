{
    "name": "cakephpmitra/spa",
    "description": "Server-driven SPA architecture for CakePHP 5 - Livewire-like reactivity without JavaScript frameworks",
    "type": "cakephp-plugin",
    "keywords": [
        "cakephp",
        "spa",
        "ajax",
        "livewire",
        "reactive",
        "partial-rendering"
    ],
    "homepage": "https://github.com/CakePHPMitra/spa",
    "license": "MIT",
    "authors": [
        {
            "name": "Atul Mahankal",
            "email": "atulmahankal@gmail.com",
            "homepage": "https://github.com/CakePHPMitra"
        }
    ],
    "support": {
        "issues": "https://github.com/CakePHPMitra/spa/issues",
        "source": "https://github.com/CakePHPMitra/spa"
    },
    "require": {
        "php": ">=8.1",
        "cakephp/cakephp": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "symplify/easy-coding-standard": "^12.0",
        "rector/rector": "^0.18"
    },
    "autoload": {
        "psr-4": {
            "CakeSPA\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CakeSPA\\Test\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "phpstan": "phpstan analyse",
        "cs-check": "ecs check src tests",
        "cs-fix": "ecs check src tests --fix",
        "rector": "rector process src --dry-run",
        "rector-fix": "rector process src"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "minimum-stability": "stable"
}
